<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gus_api.regon.env" />
    </parameters>

    <services>

        <service id="MMierzynski\GusApi\Serializer\ResponseDeserializer"
            class="MMierzynski\GusApi\Serializer\ResponseDeserializer">
        </service>

        <service id="Mierzynski\GusApi\Validator\SummaryReport"
            class="Mierzynski\GusApi\Validator\SummaryReport">
        </service>

        <service id="validator.summary_report" 
            class="Mierzynski\GusApi\Validator\SummaryReportValidator">
            <tag name="validator.constraint_validator" 
                alias="Mierzynski\GusApi\Validator\SummaryReportValidator"/>
        </service>

        <service id="Mierzynski\GusApi\Validator\ReportName"
            class="Mierzynski\GusApi\Validator\ReportName">
        </service>

        <service id="validator.report_name" 
            class="Mierzynski\GusApi\Validator\ReportNameValidator">
            <tag name="validator.constraint_validator" 
                alias="Mierzynski\GusApi\Validator\ReportNameValidator"/>
        </service>

        <service id="MMierzynski\GusApi\Client\RegonApiClient"
            class="MMierzynski\GusApi\Client\RegonApiClient">
            <argument>%gus_api.regon.env%</argument>
            <argument type="service" id="Symfony\Component\DependencyInjection\ParameterBag\ParameterBagInterface"/>
            <argument type="service" id="MMierzynski\GusApi\Serializer\ResponseDeserializer"/>
            <argument type="service" id="validator"/>
        </service>
    </services>
</container>